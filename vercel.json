{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "npm install --prefix server && cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "framework": "vite",
    "env": {
        "VMS_URL": "https://visitor-management-system-pearl.vercel.app",
        "FRONTEND_URL": "https://visitor-management-system-pearl.vercel.app",
        "PLATFORM_API_URL": "https://face-recognition-server-01.vercel.app",
        "PLATFORM_WEB_URL": "https://face-recognition-server-01.vercel.app",
        "NODE_ENV": "production"
    },
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/auth/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/health",
            "destination": "/api/index.js"
        },
        {
            "source": "/((?!api/|auth/).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/api/:path*",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
                }
            ]
        }
    ]
}