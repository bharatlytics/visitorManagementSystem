{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "builds": [
        {
            "src": "run.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/run.py"
        },
        {
            "source": "/auth/:path*",
            "destination": "/run.py"
        },
        {
            "source": "/health",
            "destination": "/run.py"
        }
    ]
}