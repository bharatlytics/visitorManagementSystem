{
    "name": "vms-enterprise",
    "version": "5.0.0",
    "description": "Visitor Management System - Express/Node.js Edition",
    "scripts": {
        "dev": "concurrently --kill-others \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:all": "concurrently --kill-others \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "node server/dev-server.js",
        "dev:backend:python": "python run.py",
        "build": "cd frontend && npm run build",
        "preview": "cd frontend && npm run preview",
        "vercel-build": "npm install --prefix server && cd frontend && npm install && npm run build"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-session": "^1.17.3",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.3.0",
        "mongoose": "^8.0.3",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "qrcode": "^1.5.3"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}