# VMS Environment Variables
# Copy this to .env and fill in your values

# JWT Secret for local authentication
JWT_SECRET=vms-secret-key-change-in-production

# MongoDB Connection
VMS_MONGODB_URI=mongodb://localhost:27017/vms_db

# Platform Integration
# IMPORTANT: Set these to production URLs in Vercel environment variables
PLATFORM_API_URL=http://localhost:5000
PLATFORM_WEB_URL=http://localhost:5000
PLATFORM_JWT_SECRET=supersecret

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_USE_TLS=true
MAIL_DEFAULT_SENDER=noreply@vms.com

# Production Example (for Vercel):
# PLATFORM_API_URL=https://your-platform-domain.vercel.app
# PLATFORM_WEB_URL=https://your-platform-domain.vercel.app
# PLATFORM_JWT_SECRET=your-production-secret
